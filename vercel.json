{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/generate-world.ts": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/generate-sound.ts": {
      "memory": 256,
      "maxDuration": 10
    }
  }
}
